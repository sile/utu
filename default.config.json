{
  "keybindings": {
    "__global__": {
      "C-c": "quit",
      "C-g": "cancel",
      "C-h": "legend"
    },
    "__main__": {
      "C-s": "save",
      "C-u": "undo",
      "C-b": "bg(_)",
      "↑,i": "prev-line",
      "↓,k": "next-line",
      "←,j": "prev-char",
      "→,l": "next-char",
      "d": "dot(o)",
      " ": "dot( )",
      "m": "scope(marker)"
    },
    "marker": {
      "s": "mark-stroke",
      "l": "mark-line",
      "r": "mark-rect",
      "R": "mark-filled-rect",
      "f": "mark-fill"
    },
    "__comment__": {
      "__paste__": {
        "v": "paste",
        "r": "scope(__resize__)",
        "t": "scope(__rotate__)",
        "ESC": "scope(__main__)"
      },
      "__resize__": {
        "↑": "resize-up",
        "↓": "resize-down",
        "←": "resize-left",
        "→": "resize-right",
        "ESC": "scope(__paste__)"
      },
      "__rotate__": {
        "r": "rotate-cw",
        "l": "rotate-ccw",
        "h": "flip-horizontal",
        "v": "flip-vertical",
        "ESC": "scope(__paste__)"
      }
    }
  }
}
