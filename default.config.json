{
  "keybindings": {
    "__global__": {
      "C-c": "quit",
      "C-h": "legend",
      "g": "cancel"
    },
    "__main__": {
      "C-s": "save",
      "C-u": "undo",
      "C-b": "bg(_)",
      "↑,i": "prev-line",
      "↓,k": "next-line",
      "←,j": "prev-char",
      "→,l": "next-char",
      " ": "dot( )",
      "d": "dot(o)",
      "w": "cut",
      "W": "copy",
      "m": "scope(marker)"
    },
    "marker": {
      "s": "mark-stroke",
      "l": "mark-line",
      "r": "mark-rect",
      "R": "mark-filled-rect",
      "f": "mark-fill"
    },
    "__clipboard__": {
      "↑,i": "prev-line",
      "↓,k": "next-line",
      "←,j": "prev-char",
      "→,l": "next-char",
      "v": "paste"
    },
    "__comment__": {
      "__clipboard__": {
        "r": "rotate-cw",
        "l": "rotate-ccw",
        "h": "flip-horizontal",
        "v": "flip-vertical"
      }
    }
  }
}
