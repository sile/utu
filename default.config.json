{
  "keybindings": {
    "__global__": {
      "C-c": "quit",
      "C-g": "cancel",
      "C-h": "legend"
    },
    "__main__": {
      "C-s": "save",
      "C-u": "undo",
      "C-b": "bg(_)",
      "↑,i": "prev-line",
      "↓,k": "next-line",
      "←,j": "prev-char",
      "→,l": "next-char",
      "d": "dot(o)",
      " ": "dot( )",
      "m": "scope(marker)"
    },
    "marker": {
      "s": "mark-stroke",
      "l": "mark-line",
      "r": "mark-rect",
      "R": "mark-filled-rect",
      "f": "mark-fill"
    },
    "__comment__": {
      "__main__": {
        "w": "cut",
        "W": "copy"
      },
      "__clipboard__": {
        "y": "paste",
        "↑,i": "prev-line",
        "↓,k": "next-line",
        "←,j": "prev-char",
        "→,l": "next-char",
        "r": "rotate-cw",
        "l": "rotate-ccw",
        "h": "flip-horizontal",
        "v": "flip-vertical"
      }
    }
  }
}
